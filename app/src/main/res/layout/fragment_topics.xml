<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicsFragment">

    <Button
        android:id="@+id/viewMembersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="@string/view_members"
        app:layout_constraintEnd_toEndOf="@id/topicsGridView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/topicsGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewMembersButton"
        android:horizontalSpacing="@dimen/famy_card_space"
        android:padding="@dimen/famy_card_space"
        android:numColumns="auto_fit"
        android:columnWidth="110dp"
        android:verticalSpacing="@dimen/famy_card_space" />
</androidx.constraintlayout.widget.ConstraintLayout>