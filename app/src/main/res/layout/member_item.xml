<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Wilmer Rodriguez"
app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:paddingRight="5dp"
        android:text="With symptoms"
        app:layout_constraintTop_toBottomOf="@id/textViewMember"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="(2020/10/31)"
        app:layout_constraintStart_toEndOf="@id/textViewStatus"
        app:layout_constraintBottom_toBottomOf="@id/textViewStatus" />
</androidx.constraintlayout.widget.ConstraintLayout>